<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:background="@drawable/pb_corners_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_download_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        tools:text="正在下载" />

    <net.pmbim.model.widget.CircleProgressBar
        android:id="@+id/pb_download_progress"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        app:progress_complete_color="#1C71C7"
        app:progress_fill_color="@android:color/white"
        app:progress_maxprogress="100"
        app:progress_progress="0"
        app:progress_text_color="#696969"
        app:progress_text_size="22sp"
        app:progress_text_visibility="visible"
        app:progress_uncomplete_color="#E7E8EA" />

    <TextView
        android:id="@+id/tv_download_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@android:color/white" />
</LinearLayout>
