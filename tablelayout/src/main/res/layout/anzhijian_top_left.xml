<?xml version="1.0" encoding="utf-8"?>


<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableRow>

        <TextView
            style="@style/table_item_gray"
            android:text="工程名称" />

        <TextView
            style="@style/table_item_white"
            android:text="" />

    </TableRow>

    <TableRow>

        <TextView
            style="@style/table_item_gray"
            android:text="建设地点" />

        <TextView
            style="@style/table_item_white"
            android:text="" />


    </TableRow>

    <TableRow>

        <TextView
            style="@style/table_item_gray"
            android:text="工程内容" />

        <TextView
            style="@style/table_item_white"
            android:text="" />


    </TableRow>


    <TableRow>

        <TextView
            style="@style/table_item_gray"
            android:text="建设性质" />

        <TextView
            style="@style/table_item_white"

            android:text="" />

    </TableRow>

    <TableRow>

        <TextView
            style="@style/table_item_gray"
            android:text="立项级别" />

        <TextView
            style="@style/table_item_white"
            android:text="" />
    </TableRow>

    <TableRow>

        <TextView
            style="@style/table_item_gray"
            android:text="建设单位" />

        <TextView
            style="@style/table_item_white"
            android:text="" />

    </TableRow>


    <TableRow>

        <TextView
            style="@style/table_item_gray"
            android:text="建设单位地址" />

        <TextView
            style="@style/table_item_white"
            android:text="" />

    </TableRow>

    <TableRow>

        <TextView
            style="@style/table_item_gray"
            android:text="勘察单位" />

        <TextView
            style="@style/table_item_white"
            android:text="" />
    </TableRow>

    <TableRow>

        <TextView
            style="@style/table_item_gray"
            android:text="设计单位" />

        <TextView
            style="@style/table_item_white"
            android:text="" />

    </TableRow>

    <TableRow>

        <TextView
            style="@style/table_item_gray"
            android:text="施工总承包单位" />

        <TextView
            style="@style/table_item_white"
            android:text="" />

    </TableRow>

    <TableRow>

        <TextView
            style="@style/table_item_gray"
            android:text="施工单位" />

        <TextView
            style="@style/table_item_white"
            android:text="" />

    </TableRow>

    <TableRow>

        <TextView
            style="@style/table_item_gray"
            android:text="监理单位" />

        <TextView
            style="@style/table_item_white"
            android:text="" />

    </TableRow>

    <TableRow>

        <LinearLayout
            android:layout_column="0"
            android:layout_span="1"
            android:orientation="horizontal">

            <TextView
                style="@style/table_item_gray"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="工程概况" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/table_item_gray"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="受监建筑面积" />

                <TextView
                    style="@style/table_item_gray"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="民防建筑面积" />

                <TextView
                    style="@style/table_item_gray"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="防护等级" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/table_item_gray"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="层数" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            style="@style/table_item_gray"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="地上" />

                        <TextView
                            style="@style/table_item_gray"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="地下" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/table_item_gray"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="类型" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_column="1"
            android:layout_span="1"
            android:orientation="vertical">

            <TextView
                style="@style/table_item_white"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="" />

            <TextView
                style="@style/table_item_white"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/table_item_white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    style="@style/table_item_gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="防化等级" />

                <TextView
                    style="@style/table_item_white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/table_item_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="" />

                    <TextView
                        style="@style/table_item_white"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>

                <TextView
                    style="@style/table_item_gray"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="民防层次" />

                <TextView
                    style="@style/table_item_white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                style="@style/table_item_white"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>
    </TableRow>
</TableLayout>
