<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--android:gravity="center_horizontal"-->
    <!--android:background="@drawable/table_frame_gray"-->
    <!--android:textSize="14sp"-->
    <style name="table_item">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/table_frame_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="table_item_gray" parent="table_item">

        <item name="android:background">@drawable/table_frame_gray</item>
    </style>

    <style name="table_item_white" parent="table_item">
        <item name="android:background">@drawable/table_frame_white</item>
        <!--<item name="android:layout_span">2</item>-->
    </style>

</resources>
